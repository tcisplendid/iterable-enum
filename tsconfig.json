{
    "compilerOptions": {
      "target": "esnext",
      "strict": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,
      "noEmit": true,
      "baseUrl": "."
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }